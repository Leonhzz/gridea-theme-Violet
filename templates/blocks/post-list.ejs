<%
var tagsColor = ['', 'primary', 'success', 'warning', 'info', 'error', 'banana', 'other_1', 'other_2', 'other_3', 'other_4'];
posts.map(function(post) { %>
<article class="post-item row">
    <% if(themeConfig.showFeatureImage && post.feature){ %>
        <div class="post-img <% if(site.customConfig.homePicturePosition === 1){ %> d-md-none <% } %>col-sm-12 col-md-4">
            <a href="<%= post.link %>" class="post-feature-image">
                <img src="<%= post.feature %>" alt="">
            </a>
        </div>
    <% } %>
    <div class="post-desc col-sm-12 <% if(themeConfig.showFeatureImage && post.feature){ %>col-md-8<% } %>">
        <h2 class="post-title">
            <a href="<%= post.link %>">
                <%= post.title %>
            </a>
        </h2>
        <div class="post-info">
            <time class="post-time"><%= post.dateFormat %></time>
            <% post.tags.forEach(function(tag) { %>
                <a href="<%= tag.link %>" class="post-tag i-tag
                                i-tag-<%= tagsColor[Math.floor(Math.random() * 11)] %>">
                    #<%= tag.name %>
                </a>
            <% }); %>
        </div>
        <div class="post-summary">
            <div class="post-summary-description">
                <% if (post.abstract) { %>
                    <%- post.abstract %>
                <% }else{ %>
                    <%= post.description %>
                <% } %>
            </div>
            <a class="btn-readMore" href="<%= post.link %>">Read More ~</a>
        </div>
    </div>
    <% if(themeConfig.showFeatureImage && post.feature && site.customConfig.homePicturePosition === 1){ %>
        <div class="post-img d-none d-md-block col-md-4">
            <a href="<%= post.link %>" class="post-feature-image">
                <img src="<%= post.feature %>" alt="">
            </a>
        </div>
    <% } %>
</article>
<% }); %>
<%- include('./pagination') %>