<div class="header">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="<%= themeConfig.domain %>">
                <img src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>" width="30" height="30"
                     class="d-inline-block align-top"
                     alt="">
                <%= themeConfig.siteName %>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <% menus.forEach(function(menu) { %>
                        <% if(['/friends',themeConfig.domain+'/friends'].indexOf(menu.link)!==-1){ %>
                            <% if(site.customConfig.friendPosition === 2){ %>
                                <li class="nav-item active">
                                    <a class="nav-link" href="<%= menu.link %>"
                                    <% if (menu.openType === 'External') { %> target="_blank"
                                            <% } %>
                                    ><%= menu.name %></a>
                                </li>
                            <% } %>
                        <% }else{ %>
                            <li class="nav-item active">
                                <a class="nav-link" href="<%= menu.link %>"
                                <% if (menu.openType === 'External') { %> target="_blank"
                                        <% } %>
                                ><%= menu.name %></a>
                            </li>
                        <% } %>
                    <% }); %>
                </ul>
            </div>
        </div>
    </nav>
</div>